
<body>
<header>
    
    <h2>{{title}}</h2>
    </header>
   <section>
        <img class="thumbnail" src="{{thumbnail}}" alt="{{title}}">
        <p><strong>Genre: </strong>{{genre}}</p>
        <p><strong>Release Date: </strong>{{releaseDate}}</p> 
        {{#if actors}}
        <p><strong>Actors: </strong>
            {{#each actors}}
            {{this}}{{#unless @last}}, {{/unless}}
            {{/each}}
        </p>
        {{/if}}

        {{#if director}}
        <p><strong>Director: </strong>
            {{#each director}}
            {{this}}{{#unless @last}}, {{/unless}}
            {{/each}}
        </p>
        {{/if}}

        {{#if producer}}
        <p><strong>Producer: </strong>
            {{#each producer}}
            {{this}}{{#unless @last}}, {{/unless}}
            {{/each}}
        </p>
        {{/if}}

        {{#if writer}}
        <p><strong>Writer: </strong>
            {{#each writer}}
            {{this}}{{#unless @last}}, {{/unless}}
            {{/each}}
        </p>
        {{/if}}
        <p><strong>MPA: </strong>{{mpa}}</p>
        <p><strong>Rating: </strong>{{overall_rating}}</p>

     <h3>Reviews</h3>
     <ol>
        {{#each reviews}}
        <li>
        <div>
            <p><strong>User: </strong>{{this.userId}}</p>
            <p><strong>Rating: </strong>{{this.rating}}</p>
            <p><strong>Review: </strong>{{this.review}}</p>
            <p><strong>Date: </strong>{{this.ts}}</p>
        </div>
        <button data-id="{{_id}}" data-review="{{this.review}}" data-rating="{{this.rating}}" type="button" class="editReview">Edit</button>
        <button type="button" class="deleteReview">Delete</button>
        
        <div id="editModal" class="editModal">
            <div class="editModalContent">
                <span class="close">&times;</span>
                <h2>Edit Review</h2>
                <form id="editReviewForm">
                    <div class="edit-form-group">
                        <label for="editedRating">Rating: </label>
                        <input type="number" id="editedRating" placeholder="Edit Rating (1-5)" min="1" max="5">
                    </div>
                    <div class="edit-form-group">
                        <label for="editedReview">Review: </label>
                        <textarea id="editedReview" placeholder="Edit Review here"></textarea>
                    </div>
                    
                    <button type="submit">Save Changes</button>
                </form>
            </div>
        </div>
        <script src="/public/js/edit_review.js"></script>
        


        </li>
        {{/each}}
    </ol>
    
    <form method="post" id="reviewForm" class="review-form">
        <label for="userId">Your User ID: </label>
        <input type="email" name="userID" id="userId" placeholder="Your User ID">
        <label for="rating">Rating (1-5): </label>
        <input type="number" name="rating" id="rating" placeholder="Rating (1-5)" min="1" max="5">
        <label for="userReview">Your Review: </label>
        <textarea id="userReview" name="review" placeholder="your review"></textarea>
        <button type="submit" id="submitreview">Submit Review</button>
        <p id="errors">

        </p>
    </form>
    <script src="/public/js/review_form.js"></script>
    </body>